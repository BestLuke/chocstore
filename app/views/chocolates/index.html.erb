<p id="notice"><%= notice %></p>

<h1>Chocolates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Sku</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chocolates.each do |chocolate| %>
      <tr>
        <td><%= chocolate.name %></td>
        <td><%= chocolate.price %></td>
        <td><%= chocolate.sku %></td>
        <td><%= chocolate.quantity %></td>
        <td><%= link_to 'Show', chocolate %></td>
        <td><%= link_to 'Edit', edit_chocolate_path(chocolate) %></td>
        <td><%= link_to 'Destroy', chocolate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chocolate', new_chocolate_path %>
